<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="subheading">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="movie_title">
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginRight">@dimen/layout_margin_16dp</item>
        <item name="android:layout_marginTop">@dimen/layout_margin_8dp</item>
        <item name="android:layout_marginLeft">@dimen/layout_margin_16dp</item>
        <item name="android:textSize">@dimen/movie_title_text</item>
        <item name="android:textStyle">normal|bold</item>
    </style>

    <style name="movie_overview">
        <item name="android:layout_gravity">fill_horizontal</item>
        <item name="android:layout_marginLeft">@dimen/layout_margin_24dp</item>
        <item name="android:layout_marginRight">@dimen/layout_margin_24dp</item>
        <item name="android:layout_marginTop">@dimen/layout_margin_8dp</item>
        <item name="android:paddingBottom">@dimen/padding_16dp</item>
        <item name="android:textSize">@dimen/overview_body_text</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>